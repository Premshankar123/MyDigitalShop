    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.e_commersapp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_order"
        android:name="com.example.e_commersapp.ui.gallery.GalleryFragment"
        android:label="@string/menu_order"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_card"
        android:name="com.example.e_commersapp.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_cart"
        tools:layout="@layout/fragment_slideshow" />
